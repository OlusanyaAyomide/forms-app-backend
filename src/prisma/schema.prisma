generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id                String          @id @default(uuid())
  email             String
  password          String
  last_logged_in_at DateTime?
  finger_print      String?
  otp               AuthOtp[]
  first_name        String?
  last_name         String?
  theme             String?
  created_at        DateTime        @default(now())
  member_students   CompanyMember[]
  quizzes           Quiz[]
}

model Member {
  id         String          @id @default(uuid())
  email      String          @unique()
  companies  CompanyMember[]
  first_name String?
  last_name  String?
  attempts   QuizAttempts[]
}

model CompanyMember {
  company    Company  @relation(fields: [company_id], references: [id])
  company_id String
  joined_at  DateTime @default(now())
  member     Member   @relation(fields: [member_id], references: [id])
  member_id  String

  @@id([company_id, member_id])
}

model Quiz {
  id                      String           @id @default(uuid())
  Company                 Company          @relation(fields: [company_id], references: [id])
  company_id              String
  title                   String
  description             String
  special_instruction     String?
  quiz_theme              String?
  quiz_logo               String?
  access_type             quiz_access_type @default(Opened)
  status                  quiz_status      @default(Draft)
  allow_multiple_attempts Boolean?
  auto_submit_on_time_out Boolean?
  quiz_type               quiz_type?       @default(Quiz)
  duration                Int?
  show_question_number    Boolean          @default(false)
  show_total_question     Boolean          @default(false)
  form_password           String?
  attempts                QuizAttempts[]
  start_button_text       String?
  assigned_mark           Int              @default(1)
  sections                QuizSection[]
  opened_at               DateTime?
  closed_at               DateTime?
  updated_at              DateTime         @updatedAt
  created_at              DateTime         @default(now())
}

model QuizSection {
  id                           String         @id() @default(uuid())
  Quiz                         Quiz           @relation(fields: [quiz_id], references: [id])
  quiz_id                      String
  title                        String
  description                  String?
  questions                    QuizQuestion[]
  section_scores               Int?
  section_assigned_total_score Int?
}

model QuizQuestion {
  id              String                 @id() @default(uuid())
  QuizSection     QuizSection            @relation(fields: [quiz_section_id], references: [id])
  quiz_section_id String
  question        String
  type            quiz_question_type
  correct_answer  String[]               @default([])
  explanation     String?
  explanation_url String?
  image_url       String?
  options         QuizOption[]
  created_at      DateTime               @default(now())
  question_order  Int
  answers         QuizQuestionAttempts[]
}

model QuizAttempts {
  id              String                 @id() @default(uuid())
  Quiz            Quiz                   @relation(fields: [quiz_id], references: [id])
  quiz_id         String
  Member          Member                 @relation(fields: [member_id], references: [id])
  member_id       String
  started_at      DateTime               @default(now())
  submitted_at    DateTime?
  auto_submitted  Boolean?               @default(false)
  time_spent      DateTime?
  ip_address      String
  finger_print    String
  status          attempt_status?        @default(Draft)
  publish_status  quiz_publish_status    @default(UnPublished)
  attempt_answers QuizQuestionAttempts[]
}

model QuizQuestionAttempts {
  id             String        @id @default(uuid())
  QuizQuestion   QuizQuestion  @relation(fields: [quizQuestionId], references: [id])
  quizQuestionId String
  QuizAttempts   QuizAttempts? @relation(fields: [quizAttemptsId], references: [id])
  quizAttemptsId String?
  answer         String
  updatedAt      DateTime      @updatedAt
  created_at     DateTime      @default(now())

  @@unique([quizAttemptsId, quizQuestionId])
}

model QuizOption {
  id               String       @id @default(uuid())
  Quiz_question    QuizQuestion @relation(fields: [quiz_question_id], references: [id])
  quiz_question_id String
  option           String
  option_url       String?
  option_content   String
}

model AuthOtp {
  id         String  @id() @default(uuid())
  otp_code   String
  Company    Company @relation(fields: [Company_id], references: [id])
  Company_id String
  expired_at String
  created_at String
}

enum quiz_access_type {
  Opened
  Password
  Restricted
}

enum attempt_status {
  Submitted
  Draft
}

enum quiz_status {
  Opened
  Closed
  Draft
}

enum quiz_question_type {
  Text
  Select
}

enum quiz_type {
  Quiz
  Form
}

enum quiz_publish_status {
  UnPublished
  Published
}
